<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.amjad.moviespro.MainActivity"
    android:background="@drawable/hanan">

    <EditText
        android:id="@+id/edit_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/edit_message"
        android:layout_marginTop="86dp"
        android:autoText="true"
        android:background="#e7dede"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/toprated_btn"
        android:layout_alignEnd="@+id/toprated_btn" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:id="@+id/search_btn"
        android:onClick="search"
        android:background="#b4e0dc"
        android:layout_alignBottom="@+id/edit_message"
        android:layout_toRightOf="@+id/topviews_btn"
        android:layout_toEndOf="@+id/topviews_btn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Top Rated"
        android:onClick="topRated"
        android:id="@+id/toprated_btn"
        android:background="#b4e0dc"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Now Playing"
        android:onClick="topViews"
        android:id="@+id/topviews_btn"
        android:contextClickable="false"
        android:cursorVisible="false"
        android:clickable="true"
        android:background="#b4e0dc"
        android:layout_marginBottom="71dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/toprated_btn"
        android:layout_alignStart="@+id/toprated_btn" />


</RelativeLayout>
